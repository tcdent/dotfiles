AGENT_MAIL_MCP_PORT=7101
AGENT_MAIL_MCP_SCOPE=user
AGENT_MAIL_DATA_DIR=$(HOME)/.local/share/agent-mail

# Project identity - git-toplevel lets agents in subdirectories communicate
AGENT_MAIL_GIT_IDENTITY_ENABLED=true
AGENT_MAIL_PROJECT_IDENTITY_MODE=git-toplevel

# LLM settings (for message summarization)
AGENT_MAIL_LLM_ENABLED=true
AGENT_MAIL_LLM_DEFAULT_MODEL=anthropic/claude-haiku-4-5-20251022
